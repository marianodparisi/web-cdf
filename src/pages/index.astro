---
import Layout from "../layouts/Layout.astro";
---
<Layout>
  <div class="mt-14 h-96 bg-[url('/Upperroom-Prayer-Room-Dallas-TX.jpg')]">
    <div class="grid grid-cols-1 h-full gap-4 sm:grid-cols-2 content-center align-middle p-4">
      <div class="text-center ml-0 sm:ml-32">
          <h1 class="drop-shadow-[0_1.2px_1.2px_rgba(0,0,0,0.8)] text-left mb-4 text-4xl font-extrabold leading-none tracking-tight md:text-5xl lg:text-6xl text-white">Iglesia</h1>
          <h1 class="drop-shadow-[0_1.2px_1.2px_rgba(0,0,0,0.8)] text-left mb-4 text-4xl font-extrabold leading-none tracking-tight text-red-400 md:text-5xl lg:text-6xl">Corazón de Fuego</h1>
          <p class="text-left text-lg font-bold text-white opacity-90 drop-shadow-[0_1.2px_1.2px_rgba(0,0,0,0.8)] lg:text-xl">Horarios</p>
          <p class="text-left text-lg font-normal text-white opacity-90 drop-shadow-[0_1.2px_1.2px_rgba(0,0,0,0.8)] lg:text-xl">Miercoles, Viernes y Sabados 20:00hs.</p>
          <p class="text-left text-lg font-normal text-white opacity-90 drop-shadow-[0_1.2px_1.2px_rgba(0,0,0,0.8)] lg:text-xl">Domingos 9:30 y 11:00 AM</p>
      </div>
    </div>
  </div>
  <div class="p-1 flex mx-40 flex-wrap items-center justify-center">
    <div class="flex-shrink-0 m-6 overflow-hidden bg-yellow-400 rounded-lg max-w-xs shadow-lg">
        <div class="pt-8 px-8 flex items-center justify-center">
            <img class="w-44" src="/Arde_PNG.png" alt="">
        </div>
        <div class="text-white px-6 pb-6 mt-6">
            <span class="block opacity-80 mb-1">Adolescentes</span>
            <span class="block text-sm opacity-80 mb-2">Sabados 18:00 a 20:00 hs.</span>
            <div class="flex justify-between">
                <span class="block font-semibold text-xl">ARDE</span>
                <button class="hover:bg-orange-500 hover:text-white transition delay-75 hover:scale-110 ease-in active:text-orange-500 bg-white rounded-full text-orange-500 text-xs font-bold px-3 py-2 leading-none flex items-center">Ver mas</button>
            </div>
        </div>
    </div>
      <div class="flex-shrink-0 m-6 overflow-hidden bg-violet-500 rounded-lg max-w-xs shadow-lg">
        <div class="pt-8 px-10 flex items-center justify-center">
            <img class="w-40" src="/Kids_PNG.png" alt="">
        </div>
        <div class="text-white px-6 pb-6 mt-6">
            <span class="block opacity-75 mb-1">Niños</span>
            <span class="block text-sm opacity-75 mb-2">Sabados 16:00 a 17:30 hs.</span>
            <div class="flex justify-between">
                <span class="block font-semibold text-xl">KIDS</span>
                <button class="hover:bg-violet-400 hover:text-white transition delay-75 hover:scale-110 ease-in active:text-violet-400 bg-white rounded-full text-xs font-bold px-3 py-2 text-gray-800 leading-none flex items-center">Ver mas</button>
            </div>
        </div>
      </div>
  </div>
</Layout>
<style>
  html{
    font-family: "Poppins", sans-serif;
    font-weight: 400;
    font-style: normal;
  }
  .background-main{
      background-image: "url(/Upperroom-Prayer-Room-Dallas-TX.jpg)";
  }
</style>